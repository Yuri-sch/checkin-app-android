<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_pending_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do UsuÃ¡rio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_pending_user_cpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF: 000.000.000-00"
            android:textColor="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#EEEEEE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eventos Inscritos (Offline):"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_pending_user_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nenhum evento"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>