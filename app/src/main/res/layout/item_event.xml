<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nome do Evento -->
        <TextView
            android:id="@+id/text_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome do Evento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel_enrollment"
            android:layout_marginEnd="8dp"/>

        <!-- Categoria e Local -->
        <TextView
            android:id="@+id/text_event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_event_name" />

        <TextView
            android:id="@+id/text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textSize="14sp"
            android:textColor="#BDBDBD"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/text_event_category"
            app:layout_constraintBaseline_toBaselineOf="@id/text_event_category" />

        <TextView
            android:id="@+id/text_event_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Local"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#424242"
            app:layout_constraintStart_toEndOf="@id/text_separator"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel_enrollment"
            app:layout_constraintBaseline_toBaselineOf="@id/text_event_category" />

        <!-- Data e Hora -->
        <TextView
            android:id="@+id/text_event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="00/00/0000 às 00:00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5E35B1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_event_category"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel_enrollment"/>

        <!-- Status -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="6dp"
            android:background="#EEEEEE"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_event_date"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Botão Cancelar (Lixeira) -->
        <!-- CORREÇÃO AQUI: layout_constraintBottom_toBottomOf="parent" e layout_constraintTop_toTopOf="parent" centralizam verticalmente -->
        <ImageButton
            android:id="@+id/btn_cancel_enrollment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#E53935"
            android:contentDescription="Cancelar Inscrição"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>